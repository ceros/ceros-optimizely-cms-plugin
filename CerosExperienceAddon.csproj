<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>Ryan Hefner</Authors>
    <Company>Ceros</Company>
    <Description>Ceros Experience Add-on for Optimizely CMS</Description>
    <PackageTags>Optimizely Ceros Add-on</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="**\*.cs" Exclude="**\bin\**;**\obj\**" />
    <Content Include="**\*.cshtml" Exclude="**\bin\**;**\obj\**" />
    <Content Include="**\*.xml" Exclude="**\bin\**;**\obj\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EPiServer.CMS.UI" Version="12.18.0" />
    <PackageReference Include="EPiServer.Framework" Version="12.12.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
</Project>
